<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <myview.MyOffAndOnButton
        android:id="@+id/fragment_time_offbt"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content" >
    </myview.MyOffAndOnButton>

    <myview.MySelectBar
        android:id="@+id/fragment_time_24or12"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content" >
    </myview.MySelectBar>

    <myview.MySelectBar
        android:id="@+id/fragment_time_time"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content" >
    </myview.MySelectBar>

    <myview.MySelectBar
        android:id="@+id/fragment_time_date"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content" >
    </myview.MySelectBar>

    <!--
         <myview.MySelectBar
        android:id="@+id/fragment_time_language"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </myview.MySelectBar>
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            style="@style/sy_text_size_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="@string/language" />

        <RadioGroup
            android:id="@+id/fragment_time_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="20dp" >

            <RadioButton
                android:id="@+id/fragment_time_language_en"
                style="@style/sy_text_size_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:button="@drawable/bdcq_set_time_group_selector"
                android:gravity="left|center_vertical"
                android:text="@string/language_en" />

            <RadioButton
                android:id="@+id/fragment_time_language_zh"
                style="@style/sy_text_size_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:button="@drawable/bdcq_set_time_group_selector"
                android:text="@string/language_zn" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content" >
    </LinearLayout>

</LinearLayout>